#include <stdio.h>
#include<string.h>


void angou(int);   //暗号化復号化
void close();//fcloseやaの値のリセット

int a,k;
char p[200];
char txt[]=".txt";
char config[]="3Fg4f064K14ynd84x3yZ11043U34c703p24bDt1r4gh4yguerAhwiiii223.txt";//ファイル名関連

FILE*bf,*af,*tx,*conf;
int main(void)
{
	while(1){
		
		
	printf("１Encryption ２Decryption Esc End\r");

	a=getch();
	
	if(a==27) 
	return 0;
	
	angou(a);

			}
			}

	void angou(int a){
		
	int v,i,num;
	char b[7];
	char  fname[64];//入力したファイル名
	char fname2[64];//.txtがついたファイル名
	char fname3[64];//拡張子付きファイル名
	
	
	conf=fopen("config.txt","a");
	fclose(conf);	
	
		system("config.txt");
			
	conf=fopen("config.txt","r");
	fscanf(conf,"%s %d %s %s",b,&num,p,fname);//拡張子とファイル数とファイルパス読み込み
	fclose(conf);	
	
			printf("Please enter your password\n");
		scanf("%d",&k);
	
	
	if(a==49){
		
		
		for(i=1;i<=num;i++){
	
		tx=fopen(config,"w");
		fprintf(tx,"%s%s (%d)%s",p,fname,i,b);//ファイル名に番号と拡張子をつける
		fclose(tx);
		
		tx=fopen(config,"r");
		fscanf(tx,"%[a-zA-Z0-9 ()._:\\]",fname3);//番号と拡張子のついたファイル名をfname3に入れる
		printf("%s",fname);
		fclose(tx);
		
		tx=fopen(config,"a");
		fprintf(tx,"%s",txt);//ファイル名の最後に.txtをつける
		fclose(tx);
		
		tx=fopen(config,"r");
		fscanf(tx,"%[a-zA-Z0-9 ()._:\\]",fname2);//.txt付ファイル名をfname2に入れる
		fclose(tx);
	
	if((bf=fopen(fname3,"rb"))==NULL)
		{ 
		printf("Encryption is complete\n");
		close();
		
		return 0;}
		

		
		af=fopen(fname2,"wb");//暗号化データを書き込むファイルfname2を作成する
	
		while((v=getc(bf))!=EOF)//暗号化する
		{putc(v+k,af);}
		
		printf("Encryption is complete%d\r",i);
		
		close();
		
		remove(fname3);
		}//for
		
				}
	
if(a==50){
	
		
		fscanf(conf,"%s",b);
		fclose(conf);
		
			
		for(i=1;i<=num;i++){
			
		tx=fopen(config,"w");
		fprintf(tx,"%s%s (%d)%s",p,fname,i,b);
		fclose(tx);
		
		tx=fopen(config,"r");
		fscanf(tx,"%[a-zA-Z0-9 ()._:\\]",fname3);
		printf("%s",fname);
		fclose(tx);
		
		tx=fopen(config,"a");
		fprintf(tx,"%s",txt);
		fclose(tx);
		
		tx=fopen(config,"r");
		fscanf(tx,"%[a-zA-Z0-9 ()._:\\]",fname2);
		
		
		if((bf=fopen(fname2,"rb"))==NULL){
		
		printf("Decryption is complete\n\n");
		close();
		
		return 0;}
	
		af=fopen(fname3,"wb");
		
		while((v=getc(bf))!=EOF)
		{putc(v-k,af);}
		
		close();
		
		printf("Decryption is complete%d\r",i);
		remove(fname2);
		
		}//for

		}/*a==2*/
		
	
		}//angou

void close(){

fclose(af);
fclose(bf);
a=0;

}
